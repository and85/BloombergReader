<Window x:Class="BloombergReader.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BloombergReader.ViewModel"
        Title="MainWindow">
    <Window.DataContext>
        <local:BarViewModel/>
    </Window.DataContext>
    <Grid>
        <ListView Name="ListViewBarDetails" ItemsSource="{Binding Bars}"  >
            <ListView.View>
                <GridView x:Name="gridViewBars">
                    <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time}"/>
                    <GridViewColumn Header="Open" DisplayMemberBinding="{Binding Open}"/>
                    <GridViewColumn Header="High" DisplayMemberBinding="{Binding High}"/>
                    <GridViewColumn Header="Low" DisplayMemberBinding="{Binding Low}"/>
                    <GridViewColumn Header="Close" DisplayMemberBinding="{Binding Close}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
